<%= form_tag(search_path, method: "get") do %>
	<div class="form-group col-md-8 floating-label-form-group controls" style="background-color: #7FDBFF">
		<%= text_field_tag :q, nil, placeholder: 'Bambi', class: 'form-control' %>
	</div>
	<div class="col-md-4">
		<%= submit_tag("Search", class: 'btn btn-default') %>
	</div>
<% end %>